generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model study_plans {
  id             Int              @id @default(autoincrement()) @map("id")
  planCode       String?          @unique @db.VarChar(2) @map("planCode")
  nameEng        String           @db.VarChar(60) @map("nameEng")
  nameTh         String           @db.VarChar(100) @map("nameTh")

  declared_plans declared_plans[]

  @@map("study_plans")
}

model declared_plans {
  studentId   String    @id @db.Char(11) @map("studentId")
  planId      Int       @map("planId")
  createdAt   DateTime? @db.DateTime(0) @map("createdAt")
  updatedAt   DateTime? @db.DateTime(0) @map("updatedAt")

  study_plans study_plans @relation(fields: [planId], references: [id])

  @@index([planId], map: "planId_index")
  @@map("declared_plans")
}